<mvc:View controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="_IDGenPage1" title="{i18n>employeeDetails}">
    <Panel id="_IDGenPanel1" >
    <FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
    <items>
    <Text id="_IDGenText1" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}" class="boldText"/>
    </items>
    </FlexBox>
    <FlexBox id="_IDGenFlexBox12" height="65px" alignItems="Start" justifyContent="SpaceBetween">
    <items>
    <VBox id="_IDGenVBox1" >
     <Text id="_IDGenText2" text="{i18n>employeeID}" class="boldText sapUITinyMarginEnd"/>
     <Text id="_IDGenText3" text="{jsonEmployees>EmployeeID}" class="boldText sapUITinyMarginEnd"/>
    </VBox>
    <VBox id="_IDGenVBox2" >
     <Text id="_IDGenText4" text="{i18n>title}" class="boldText sapUITinyMarginEnd"/>
     <Text id="_IDGenText5" text="{jsonEmployees>Title}" class="boldText"/>
    </VBox>
    </items>
    </FlexBox>
     <FlexBox id="_IDGenFlexBox13" alignItems="Start">
    <items>
    <HBox id="_IDGenHBox1N" >
     <Text id="_IDGenText6" text="{i18n>country}" class="boldText sapUITinyMarginEnd"/>
     <Text id="_IDGenText7" text="{jsonEmployees>Country}" class="boldText sapUITinyMarginEnd"/>
     <layoutData>
     <FlexItemData id="_IDGenFlexItemData1" growFactor="3"></FlexItemData>
     </layoutData>
    </HBox>
    <HBox id="_IDGenHBox2" >
     <Text id="_IDGenText8" text="{i18n>city}" class="boldText sapUITinyMarginEnd"/>
     <Text id="_IDGenText9" text="{jsonEmployees>City}" class="boldText sapUITinyMarginEnd"/>
        <layoutData>
     <FlexItemData id="_IDGenFlexItemData2" growFactor="2"></FlexItemData>
     </layoutData>
    </HBox>
      <FlexBox id="_IDGenFBox3" direction="Row" alignItems="Start">
     <Text id="_IDGenText10" text="{i18n>postalCode}" class="boldText sapUITinyMarginEnd"/>
     <Text id="_IDGenText11" text="{jsonEmployees>PostalCode}" class="boldText sapUITinyMarginEnd"/>
        <layoutData>
     <FlexItemData id="_IDGenFlexItemData3" growFactor="1"></FlexItemData>
     </layoutData>
    </FlexBox>
    </items>
    </FlexBox>
    </Panel>
    </Page>

</mvc:View>
