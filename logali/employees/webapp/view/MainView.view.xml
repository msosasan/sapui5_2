<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
    <App id="app">
    <pages>
    <Page id="page" title="{i18n>title}">
        <content>
             <FlexBox
                id="fbox"
				height="100px"
				alignItems="Start"
				justifyContent="Start">
               <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" labelFor="inputEmployee"/>
               <Input id="inputEmployee" maxLength="10" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
               <Label id="labelCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" labelFor="slCountry" visible="false"/>
               <Select id="slCountry" forceSelection="false" visible="false">
               <items>
               <core:Item id="item1" key="US" text="{i18n>countryUS}"/>
               <core:Item id="item2" key="UK" text="{i18n>countryUS}"/>
               <core:Item id="item3" key="ES" text="{i18n>countryES}"/>
               </items>
               </Select>
             </FlexBox>
        </content>
    </Page>
    </pages>
    </App>
    </Shell>
</mvc:View>
